{%- liquid
  assign has_title = false
  assign has_content = false
  
  if title != blank and title != '' and title != nil
    assign title_check = title | strip | strip_html
    if title_check != blank and title_check != ''
      assign has_title = true
    endif
  endif
  
  if content != blank and content != '' and content != nil
    # Convert content to string and split into paragraphs
    assign content_string = content | strip
    assign paragraphs = content_string | split: '</p>'
    assign clean_paragraphs = ''
    
    # Process each paragraph
    for paragraph in paragraphs
      if paragraph contains '<p>'
        # Remove opening tag temporarily to check content
        assign para_content = paragraph | remove: '<p>'
        assign para_content = para_content | strip
        
        # Check if paragraph has actual text content (not just br tags)
        assign text_check = para_content | remove: '<br>' | remove: '<br/>' | remove: '<br />' | strip
        
        if text_check != blank and text_check != ''
          # This paragraph has real content, clean it up
          assign clean_para = paragraph
          # Replace multiple br tags with single br
          assign clean_para = clean_para | replace: '<br><br><br><br><br>', '<br>'
          assign clean_para = clean_para | replace: '<br><br><br><br>', '<br>'
          assign clean_para = clean_para | replace: '<br><br><br>', '<br>'
          assign clean_para = clean_para | replace: '<br><br>', '<br>'
          # Remove br at start and end
          assign clean_para = clean_para | replace: '<p><br>', '<p>'
          assign clean_para = clean_para | replace: '<br></p>', '</p>'
          # Add back the closing tag
          if clean_para contains '<p>'
            assign clean_para = clean_para | append: '</p>'
          endif
          assign clean_paragraphs = clean_paragraphs | append: clean_para
        endif
      endif
    endfor
    
    assign cleaned_content = clean_paragraphs
    
    # Final check for content
    assign content_check = cleaned_content | strip_html | strip
    if content_check != blank and content_check != ''
      assign has_content = true
    endif
  endif
  
  assign output_tab = false
  if has_title or has_content
    assign output_tab = true
  endif
-%}
{%- if output_tab -%}
<div class="collapsibles-wrapper collapsibles-wrapper--border-bottom">
  <button type="button" class="label collapsible-trigger collapsible-trigger-btn collapsible-trigger-btn--borders collapsible--auto-height{%- if force_open %} is-open{%- endif -%}" aria-controls="Product-content-{{ id }}"{%- if force_open %} aria-expanded="true"{%- endif -%}>
    {{- title | strip -}}
    {%- render 'collapsible-icons' -%}
  </button>
  <div id="Product-content-{{ id }}" class="collapsible-content collapsible-content--all{%- if force_open %} is-open{%- endif -%}"{%- if force_open %} style="height: auto;"{%- endif -%}>
    <div class="collapsible-content__inner rte">
      {{- cleaned_content -}}
    </div>
  </div>
</div>
{%- endif -%}