{%- liquid
  assign has_title = false
  assign has_content = false
  
  if title != blank and title != '' and title != nil
    assign title_check = title | strip | strip_html
    if title_check != blank and title_check != ''
      assign has_title = true
    endif
  endif
  
  if content != blank and content != '' and content != nil
    # Debug: Show original content
    assign original = content
    
    # Start cleaning
    assign cleaned_content = content
    
    # Step 1: Remove empty paragraphs
    assign cleaned_content = cleaned_content | remove: '<p></p>'
    assign cleaned_content = cleaned_content | remove: '<p><br></p>'
    assign cleaned_content = cleaned_content | remove: '<p><br><br></p>'
    assign step1 = cleaned_content
    
    # Step 2: Replace the specific pattern
    assign cleaned_content = cleaned_content | replace: '<br><br><br><br><br>', '|BREAK|'
    assign step2 = cleaned_content
    
    # Step 3: Continue with other patterns
    assign cleaned_content = cleaned_content | replace: '<br><br><br><br>', '|BREAK|'
    assign cleaned_content = cleaned_content | replace: '<br><br><br>', '|BREAK|'
    assign cleaned_content = cleaned_content | replace: '<br><br>', '|BREAK|'
    assign step3 = cleaned_content
    
    # Step 4: Replace markers with single br
    assign cleaned_content = cleaned_content | replace: '|BREAK|', '<br>'
    assign final = cleaned_content
    
    # Check for content
    assign content_check = cleaned_content | strip_html | strip
    if content_check != blank and content_check != ''
      assign has_content = true
    endif
  endif
  
  assign output_tab = false
  if has_title or has_content
    assign output_tab = true
  endif
-%}
{%- if output_tab -%}
