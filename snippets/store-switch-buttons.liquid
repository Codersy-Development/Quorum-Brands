{{ 'store-switcher.css' | asset_url | stylesheet_tag }}
<store-switcher class="store-switcher-box">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'store_selector' %}
        {% assign store_name = block.settings.title %}
        <div class="store-switcher__btn">
          <label for="store-switcher-{{ store_name  |  downcase }}">
            <input
              type="radio"
              name="store-switcher"
              id="store-switcher-{{ store_name |  downcase }}"
              value="{{ store_name |  downcase  }}"
              checked
            >
            <div class="store-switcher-content">
              <div class="store-switcher-title">{{ store_name }}</div>
            </div>
          </label>
        </div>
    {% endcase %}
  {% endfor %}
</store-switcher>
<script src="{{ 'store-switcher.js' |   asset_url}}" async></script>
