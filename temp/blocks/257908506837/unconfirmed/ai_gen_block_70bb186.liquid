{% doc %}
  @prompt
    Text Bolck

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-block-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px {{ block.settings.padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.text_alignment }};
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-text-block-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin:0 0 {{ block.settings.heading_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-text-block-content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: {{ block.settings.line_height }};
    margin: 0;
  }

  .ai-text-block-content-{{ ai_gen_id }} p {
    margin: 0 0 1em 0;
  }

  .ai-text-block-content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-text-block-content-{{ ai_gen_id }} h1,
  .ai-text-block-content-{{ ai_gen_id }} h2,
  .ai-text-block-content-{{ ai_gen_id }} h3,
  .ai-text-block-content-{{ ai_gen_id }} h4,
  .ai-text-block-content-{{ ai_gen_id }} h5,
  .ai-text-block-content-{{ ai_gen_id }} h6 {
    color: {{ block.settings.heading_color }};
    margin: 1.5em 0 0.5em 0;
  }

  .ai-text-block-content-{{ ai_gen_id }} h1:first-child,
  .ai-text-block-content-{{ ai_gen_id }} h2:first-child,
  .ai-text-block-content-{{ ai_gen_id }} h3:first-child,
  .ai-text-block-content-{{ ai_gen_id }} h4:first-child,
  .ai-text-block-content-{{ ai_gen_id }} h5:first-child,
  .ai-text-block-content-{{ ai_gen_id }} h6:first-child {
    margin-top: 0;
  }

  .ai-text-block-content-{{ ai_gen_id }} ul,
  .ai-text-block-content-{{ ai_gen_id }} ol {
    margin: 1em 0;
    padding-left: 2em;
  }

  .ai-text-block-content-{{ ai_gen_id }} li {
    margin-bottom: 0.5em;
  }

  .ai-text-block-content-{{ ai_gen_id }} a {
    color: {{ block.settings.link_color }};
    text-decoration: underline;
  }

  .ai-text-block-content-{{ ai_gen_id }} a:hover {
    opacity: 0.8;
  }

  .ai-text-block-content-{{ ai_gen_id }} strong,
  .ai-text-block-content-{{ ai_gen_id }} b {
    font-weight: bold;
  }

  .ai-text-block-content-{{ ai_gen_id }} em,
  .ai-text-block-content-{{ ai_gen_id }} i {
    font-style: italic;
  }

  @media screen and (max-width: 749px) {
    .ai-text-block-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px;
    }

    .ai-text-block-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-text-block-content-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;}
  }
{% endstyle %}<div class="ai-text-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="ai-text-block-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {% endif %}
  
  {% if block.settings.content != blank %}
    <div class="ai-text-block-content-{{ ai_gen_id }}">
      {{ block.settings.content }}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Text Block",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Text content",
      "default": "<p>Add your text content here. You can format it with bold, italic, links, and more.</p>"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Maximum width",
      "default": 800
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Horizontal padding",
      "default": 20
    },
    {
      "type": "range",
      "id": "heading_spacing",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Heading bottom spacing",
      "default": 16
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Heading font size",
      "default": 28
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text font size",
      "default": 16
    },
    {
      "type": "range",
      "id": "line_height",
      "min": 1,
      "max": 2,
      "step": 0.1,
      "label": "Line height",
      "default": 1.5
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link color",
      "default": "#0066cc"
    }
  ],
  "presets": [
    {
      "name": "Text Block"
    }
  ],
  "tag": null
}
{% endschema %}