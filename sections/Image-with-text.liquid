{{ 'custom-image-with-text.css' | asset_url | stylesheet_tag }}
<section class="image-with-text feature-promo">
    <div class="container">
        <div class="feature-grid">
            <div class="feature-left">
                {% if section.settings.logo %}
                    <img src="{{ section.settings.logo | img_url: 'master' }}" alt="Logo" class="feature-logo">
                {% endif %}

                {% if section.settings.heading != blank %}
                    <h2 class="feature-title">{{ section.settings.heading }}</h2>
                {% endif %}

                {% if section.settings.text != blank %}
                    <p class="feature-text">{{ section.settings.text }}</p>
                {% endif %}

                {% if section.settings.button_label != blank and section.settings.button_link != blank %}
                    <a href="{{ section.settings.button_link }}" class="feature-button">{{ section.settings.button_label }}</a>
                {% endif %}
            </div>

            <div class="feature-right">
                {% if section.settings.image %}
                    <img src="{{ section.settings.image | img_url: 'master' }}" alt="Feature Image" class="feature-image">
                {% endif %}
            </div>
        </div>
    </div>
</section>

{% schema %}
{
  "name": "Feature Promo",
  "tag": "section",
  "class": "feature-promo-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Upload Logo"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Text",
      "default": "Heading goes here"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Paragraph Text",
      "default": "Add your paragraph text here. Talk about your brand, product, or promotion."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Text",
      "default": "Explore Products"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Main Feature Image"
    }
  ],
  "presets": [
    {
      "name": "Feature Promo"
    }
  ]
}
{% endschema %}
