<div class="guide-section">
    <div class="guide-layout">
        <div class="guide-text">
            <h2 class="h2">{{ section.settings.heading }}</h2>
            <p class="guide-desc">{{ section.settings.description }}</p>
            {% if section.settings.main_image %}
              <img src="{{ section.settings.main_image | image_url: width: 1000 }}" alt="Bathroom Image">
            {% else %}
              <p>No image selected.</p>
            {% endif %}
        </div>

        <div class="right-box">
            {% content_for 'blocks' %}
            {% if section.settings.tip != blank %}
                <div class="designer-tip-box">
                    <p class="designer-tip-title">Designer Tip:</p>
                    <p>{{ section.settings.tip }}</p>
                </div>
            {% endif %}
        </div>

    </div>
</div>
<style>
    .guide-section {
        max-width: 1400px;
        margin: 0 auto;
        padding: 4rem 1rem;
    }

    .guide-layout {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        align-items: stretch; /* ðŸ‘ˆ makes both columns same height */
    }

    .guide-text,
    .right-box {
        height: 100%; /* ðŸ‘ˆ ensures both sides fill the row */
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .guide-text img {
        width: 100%;
        height: 100%;
        display: block;
        border-radius: 8px;
        margin-top: auto; /* pushes image to bottom */
        object-fit: cover;
    }

    .right-box {
        width: 100%;
    }

    .designer-tip-box {
        display: flex;
        flex-direction: row;
        gap: 16px;
        background: #7B675C;
        color: #ffffff;
        padding: 1rem 1.5rem;
        font-size: 10px;
        line-height: 1.6;
        width: 100%;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
        margin-top: auto; /* aligns to bottom of the column */
    }

    .designer-tip-title {
        font-weight: bold;
        color: #ffffff;
        border-right: 1px solid #ffffff;
        font-size: 12px;
        padding-right: 16px;
    }

    @media (max-width: 1024px) {
        .guide-layout {
            grid-template-columns: 1fr;
        }

        .guide-text,
        .right-box {
            height: auto;
        }

        .designer-tip-box {
            margin-top: 1rem;
        }
    }
</style>

{% schema %}
{
  "name": "Guide Section",
  "tag": "section",
  "class": "guide-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "textarea",
      "id": "tip",
      "label": "Designer Tip"
    }
  ],
  "blocks": [{ "type": "@theme" }, { "type": "@app" }],
  "presets": [
    {
      "name": "Guide Section"
    }
  ]
}
{% endschema %}