<div class="guide-section">
    <div class="guide-layout">
        <div class="guide-text">
            {% if section.settings.title_box_color != blank %}
                <div class="title-colored-box" 
                     style="background-color: {{ section.settings.title_box_color }}; 
                            height: {{ section.settings.title_box_height }}px; 
                            width: {{ section.settings.title_box_width }}%;"></div>
            {% endif %}
            <h2 class="h2">{{ section.settings.heading }}</h2>
            <p class="guide-desc">{{ section.settings.description }}</p>
            {% if section.settings.main_image %}
              <img src="{{ section.settings.main_image | image_url: width: 1000 }}" alt="Bathroom Image">
            {% endif %}
        </div>
        <div class="right-box">
            {% content_for 'blocks' %}
            {% if section.settings.tip != blank %}
                <div class="guide-designer-tip-box">
                    <p class="guide-designer-tip-title">Designer Tip:</p>
                    <p>{{ section.settings.tip }}</p>
                </div>
            {% endif %}
        </div>
    </div>
    
    <!-- Additional Designer Tip Sections -->
    {% if section.settings.tip_2 != blank %}
        <div class="additional-tip-section">
            <div class="guide-designer-tip-box">
                <p class="guide-designer-tip-title">Designer Tip:</p>
                <p>{{ section.settings.tip_2 }}</p>
            </div>
        </div>
    {% endif %}
    
    {% if section.settings.tip_3 != blank %}
        <div class="additional-tip-section">
            <div class="guide-designer-tip-box">
                <p class="guide-designer-tip-title">Designer Tip:</p>
                <p>{{ section.settings.tip_3 }}</p>
            </div>
        </div>
    {% endif %}
</div>
<style>
    .guide-section {
        max-width: 1400px;
        margin: 0 auto;
        padding: 4rem 1rem;
    }
    .guide-layout {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        align-items: stretch; /* ðŸ‘ˆ makes both columns same height */
    }
    .guide-text,
    .right-box {
        height: 100%; /* ðŸ‘ˆ ensures both sides fill the row */
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
    .guide-text img {
        width: 100%;
        height: 100%;
        display: block;
        border-radius: 8px;
        margin-top: auto; /* pushes image to bottom */
        object-fit: cover;
    }
    .right-box {
        width: 100%;
    }
    .title-colored-box {
        margin-bottom: 1rem;
        border-radius: 4px;
    }
    .guide-designer-tip-box {
        display: flex;
        flex-direction: row;
        gap: 16px;
        background: #7B675C;
        color: #ffffff;
        padding: 1rem 1.5rem;
        font-size: 10px;
        line-height: 1.6;
        width: 100%;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
        margin-top: auto; /* aligns to bottom of the column */
    }
    .guide-designer-tip-title {
        font-weight: bold;
        color: #ffffff;
        border-right: 1px solid #ffffff;
        font-size: 12px;
        padding-right: 16px;
    }
    .additional-tip-section {
        margin-top: 2rem;
        max-width: 100%;
    }
    .additional-tip-section .guide-designer-tip-box {
        margin-top: 0;
    }
    @media (max-width: 1024px) {
        .guide-layout {
            grid-template-columns: 1fr;
        }
        .guide-text,
        .right-box {
            height: auto;
        }
        .guide-designer-tip-box {
            margin-top: 1rem;
        }
        .additional-tip-section {
            margin-top: 1rem;
        }
    }
</style>
{% schema %}
{
  "name": "Guide Section",
  "tag": "section",
  "class": "guide-section",
  "settings": [
    {
      "type": "header",
      "content": "Title Colored Box"
    },
    {
      "type": "color",
      "id": "title_box_color",
      "label": "Title Box Color",
      "info": "Leave empty to hide the colored box"
    },
    {
      "type": "range",
      "id": "title_box_height",
      "label": "Title Box Height",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "title_box_width",
      "label": "Title Box Width",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 50
    },
    {
      "type": "header",
      "content": "Main Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "header",
      "content": "Designer Tips"
    },
    {
      "type": "textarea",
      "id": "tip",
      "label": "Designer Tip 1 (Right Side)",
      "info": "Appears in the right column next to the image"
    },
    {
      "type": "textarea",
      "id": "tip_2",
      "label": "Designer Tip 2 (Below Image)",
      "info": "Appears below the main layout"
    },
    {
      "type": "textarea",
      "id": "tip_3",
      "label": "Designer Tip 3 (Below Image)",
      "info": "Appears below Designer Tip 2"
    }
  ],
  "blocks": [{ "type": "@theme" }, { "type": "@app" }],
  "presets": [
    {
      "name": "Guide Section"
    }
  ]
}
{% endschema %}