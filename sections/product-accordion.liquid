<section class="spec-accordion-section">
    <div class="spec-accordion">
        <button class="accordion-toggle" type="button">
            {{ section.settings.title }}
            <span class="arrow">â–¼</span>
        </button>

        <div class="accordion-content">
            {% for block in section.blocks %}
                <div class="spec-sheet-item">
                    <div class="spec-image">
                        {% if block.settings.image %}
                            <img src="{{ block.settings.image | img_url: '300x' }}" alt="{{ block.settings.title }}">
                        {% endif %}
                    </div>
                    <div class="spec-info">
                        <p class="spec-title">{{ block.settings.title }}</p>
                        <div class="spec-actions">
                            {% if block.settings.image %}
                                <a href="{{ block.settings.image | img_url: 'master' }}" target="_blank" class="view-link">View</a>
                                <a href="{{ block.settings.image | img_url: 'master' }}" download class="download-link">Download</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<style>
    .spec-accordion-section {
        max-width: 1140px;
        padding: 40px 20px;
        border-top: 1px solid #ddd;
        margin: 0 auto;
    }
    .accordion-toggle {
        background: none;
        border: none;
        font-size: 20px;
        font-weight: bold;
        color: #005030;
        width: 100%;
        text-align: left;
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .accordion-toggle .arrow {
        font-size: 16px;
        transition: transform 0.3s ease;
    }
    .accordion-content {
        display: none;
        margin-top: 20px;
        gap: 20px;
        flex-direction: column;
    }
    .spec-sheet-item {
        display: flex;
        align-items: center;
        border-top: 1px solid #eee;
        padding: 15px 0;
    }
    .spec-image img {
        width: 120px;
        height: auto;
        border: 1px solid #ccc;
    }
    .spec-info {
        flex-grow: 1;
        margin-left: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .spec-title {
        font-weight: 500;
    }
    .spec-actions a {
        margin-left: 15px;
        font-size: 14px;
        color: #000;
        text-decoration: underline;
    }
    .accordion-open .accordion-content {
        display: flex;
    }
    .accordion-open .arrow {
        transform: rotate(180deg);
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const toggle = document.querySelector('.accordion-toggle');
        const container = document.querySelector('.spec-accordion');

        toggle.addEventListener('click', function () {
            container.classList.toggle('accordion-open');
        });
    });
</script>
{% schema %}
{
  "name": "Product Accordion",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "spec_sheet",
      "name": "Spec Sheet",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Spec Sheet Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Spec Sheets",
      "category": "Content"
    }
  ]
}
{% endschema %}