{{ 'custom-art-of-light.css' | asset_url | stylesheet_tag }}
<section
    class="art-of-light"
    {% unless section.settings.store == "all" %}
        data-store="{{ section.settings.store }}"
    {% endunless %}
>
    <div class="container">
        <div class="header">
            {% if section.settings.title %}
                <h2 class="title">{{ section.settings.title }}</h2>
            {% endif %}
            {% if section.settings.subtitle %}
                <p class="subtitle">{{ section.settings.subtitle }}</p>
            {% endif %}
        </div>

        <div class="colors">
            {% for block in section.blocks %}
                <div class="color-item{% if forloop.first %} active{% endif %}" data-color="{{ block.id }}">
                    {% if block.settings.icon %}
                        <img src="{{ block.settings.icon | img_url: 'small' }}" alt="{{ block.settings.label }}" class="color-icon">
                    {% endif %}
                    {% if block.settings.label %}
                        <p class="color-label">{{ block.settings.label }}</p>
                    {% endif %}
                </div>
            {% endfor %}
        </div>

        <div class="social-grid-wrapper">
            {% for block in section.blocks %}
                <div class="social-grid" id="gallery-{{ block.id }}" {% unless forloop.first %}style="display: none;"{% endunless %}>
                    {% for i in (1..8) %}
                        {% assign key = "image_" | append: i %}
                        {% assign url_key = "url_" | append: i %}
                        {% assign image = block.settings[key] %}
                        {% assign image_url = block.settings[url_key] %}
                        {% if image %}
                            <div class="social-item">
                                {% if image_url %}
                                    <a href="{{ image_url }}" target="_blank" rel="noopener" class="image-link">
                                        <img src="{{ image | img_url: '1024x1024' }}" alt="Social Image {{ i }}">
                                    </a>
                                {% else %}
                                    <img src="{{ image | img_url: '1024x1024' }}" alt="Social Image {{ i }}">
                                {% endif %}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endfor %}
        </div>

        {% if section.settings.button_text and section.settings.button_link %}
            <div class="button-wrapper">
                <a href="{{ section.settings.button_link }}" class="cta-button">{{ section.settings.button_text }}</a>
            </div>
        {% endif %}
    </div>
</section>

<style>
.image-link {
    display: block;
    transition: opacity 0.3s ease, transform 0.3s ease;
}

.image-link:hover {
    opacity: 0.9;
    transform: scale(1.02);
}

.social-item {
    cursor: pointer;
}

.social-item img {
    transition: transform 0.3s ease;
}

.image-link img {
    width: 100%;
    height: auto;
}

/* Active state styling for color items */
.color-item.active {
    opacity: 1;
    transform: scale(1.05);
}

.color-item {
    opacity: 0.7;
    transition: opacity 0.3s ease, transform 0.3s ease;
    cursor: pointer;
}

.color-item:hover {
    opacity: 1;
}
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const colorItems = document.querySelectorAll('.color-item');
        const galleries = document.querySelectorAll('.social-grid');
        const wrapper = document.querySelector('.social-grid-wrapper');
        const artOfLightSection = document.querySelector('.art-of-light');

        const loader = document.createElement('div');
        loader.classList.add('loader');
        wrapper.appendChild(loader);

        // Store filtering integration
        function checkStoreVisibility() {
            if (!artOfLightSection) return true;
            
            const selectedStore = localStorage.getItem("store-selected") || "";
            const sectionStore = artOfLightSection.getAttribute('data-store');
            
            // If section is set to show on all stores, always show
            if (!sectionStore || sectionStore === 'all') {
                artOfLightSection.style.display = '';
                return true;
            }
            
            // Check if "All Brands" is selected (using the same logic as the filtering script)
            function isAllBrands(storeValue) {
                if (!storeValue) return false;
                const normalized = storeValue.toLowerCase().trim();
                return normalized === 'all brands' || normalized === 'shop all';
            }
            
            // Show section if selected store matches section store, or if "All Brands" is selected
            const shouldShow = isAllBrands(selectedStore) || 
                             selectedStore.toLowerCase() === sectionStore.toLowerCase() || 
                             selectedStore === '';
            
            artOfLightSection.style.display = shouldShow ? '' : 'none';
            return shouldShow;
        }

        function showGallery(id) {
            galleries.forEach(grid => {
                grid.style.display = 'none';
                grid.style.opacity = '0';
            });

            loader.style.display = 'block';

            setTimeout(() => {
                galleries.forEach(grid => {
                    if (grid.id === 'gallery-' + id) {
                        grid.style.display = 'block';
                        setTimeout(() => {
                            grid.style.opacity = '1';
                        }, 50);
                    }
                });
                loader.style.display = 'none';
            }, 500);

            colorItems.forEach(item => {
                item.classList.toggle('active', item.getAttribute('data-color') === id);
            });
        }

        function initializeGallery() {
            // Only initialize if section should be visible
            if (!checkStoreVisibility()) return;
            
            if (colorItems.length) {
                const firstColorId = colorItems[0].getAttribute('data-color');
                const firstGallery = document.getElementById('gallery-' + firstColorId);
                if (firstGallery) {
                    firstGallery.style.display = 'block';
                    firstGallery.style.opacity = '1';
                }
            }
        }

        // Initialize first gallery as visible and first color as active
        initializeGallery();

        colorItems.forEach(item => {
            item.addEventListener('click', function () {
                const colorId = this.getAttribute('data-color');
                showGallery(colorId);
            });
        });

        // Listen for store changes (integrates with your store filtering script)
        document.addEventListener('storeChanged', function(e) {
            console.log('[Art of Light] Store changed, checking visibility');
            setTimeout(() => {
                const isVisible = checkStoreVisibility();
                if (isVisible) {
                    initializeGallery();
                }
            }, 100);
        });

        // Also listen for the regular change events as backup
        document.addEventListener('change', function(e) {
            if (e.target.type === 'radio' && e.target.closest('store-switcher')) {
                setTimeout(() => {
                    const isVisible = checkStoreVisibility();
                    if (isVisible) {
                        initializeGallery();
                    }
                }, 150);
            }
        });

        // Initial store check
        setTimeout(checkStoreVisibility, 100);
    });
</script>

