{{ 'custom-art-of-light.css' | asset_url | stylesheet_tag }}
<section
    class="art-of-light"
    {% unless section.settings.store == "all" %}
        data-store="{{ section.settings.store }}"
    {% endunless %}
>
    <div class="container">
        <div class="header">
            {% if section.settings.title %}
                <h2 class="title">{{ section.settings.title }}</h2>
            {% endif %}
            {% if section.settings.subtitle %}
                <p class="subtitle">{{ section.settings.subtitle }}</p>
            {% endif %}
        </div>

        <div class="colors">
            {% for block in section.blocks %}
                <div class="color-item{% if forloop.first %} active{% endif %}" data-color="{{ block.id }}">
                    {% if block.settings.icon %}
                        <img src="{{ block.settings.icon | img_url: 'small' }}" alt="{{ block.settings.label }}" class="color-icon">
                    {% endif %}
                    {% if block.settings.label %}
                        <p class="color-label">{{ block.settings.label }}</p>
                    {% endif %}
                </div>
            {% endfor %}
        </div>

        <div class="social-grid-wrapper">
            {% for block in section.blocks %}
                <div class="social-grid" id="gallery-{{ block.id }}" {% unless forloop.first %}style="display: none;"{% endunless %}>
                    {% for i in (1..8) %}
                        {% assign key = "image_" | append: i %}
                        {% assign url_key = "url_" | append: i %}
                        {% assign image = block.settings[key] %}
                        {% assign image_url = block.settings[url_key] %}
                        {% if image %}
                            <div class="social-item">
                                {% if image_url %}
                                    <a href="{{ image_url }}" target="_blank" rel="noopener" class="image-link">
                                        <img src="{{ image | img_url: '1024x1024' }}" alt="Social Image {{ i }}">
                                    </a>
                                {% else %}
                                    <img src="{{ image | img_url: '1024x1024' }}" alt="Social Image {{ i }}">
                                {% endif %}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endfor %}
        </div>

        {% if section.settings.button_text and section.settings.button_link %}
            <div class="button-wrapper">
                <a href="{{ section.settings.button_link }}" class="cta-button">{{ section.settings.button_text }}</a>
            </div>
        {% endif %}
    </div>
</section>

<style>
.image-link {
    display: block;
    transition: opacity 0.3s ease, transform 0.3s ease;
}

.image-link:hover {
    opacity: 0.9;
    transform: scale(1.02);
}

.social-item {
    cursor: pointer;
}

.social-item img {
    transition: transform 0.3s ease;
}

.image-link img {
    width: 100%;
    height: auto;
}

/* Active state styling for color items */
.color-item.active {
    opacity: 1;
    transform: scale(1.05);
}

.color-item {
    opacity: 0.7;
    transition: opacity 0.3s ease, transform 0.3s ease;
    cursor: pointer;
}

.color-item:hover {
    opacity: 1;
}

/* Force gallery visibility - debugging */
.social-grid {
    min-height: 200px;
    width: 100%;
}

.social-grid.active {
    display: block !important;
    opacity: 1 !important;
}

.social-item {
    border: 1px solid #eee; /* Temporary - to see if items are there */
    min-height: 100px;
}

.social-item img {
    width: 100%;
    height: auto;
    display: block;
}
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const colorItems = document.querySelectorAll('.color-item');
        const galleries = document.querySelectorAll('.social-grid');
        const wrapper = document.querySelector('.social-grid-wrapper');

        const loader = document.createElement('div');
        loader.classList.add('loader');
        wrapper.appendChild(loader);

        function showGallery(id) {
            galleries.forEach(grid => {
                grid.style.display = 'none';
                grid.style.opacity = '0';
            });

            loader.style.display = 'block';

            setTimeout(() => {
                galleries.forEach(grid => {
                    if (grid.id === 'gallery-' + id) {
                        grid.style.display = 'block';
                        setTimeout(() => {
                            grid.style.opacity = '1';
                        }, 50);
                    }
                });
                loader.style.display = 'none';
            }, 500);

            colorItems.forEach(item => {
                item.classList.toggle('active', item.getAttribute('data-color') === id);
            });
        }

        function initializeGallery() {
            console.log('Initializing gallery...');
            console.log('Color items found:', colorItems.length);
            console.log('Galleries found:', galleries.length);
            
            if (colorItems.length) {
                const firstColorId = colorItems[0].getAttribute('data-color');
                const firstGallery = document.getElementById('gallery-' + firstColorId);
                console.log('First color ID:', firstColorId);
                console.log('First gallery found:', !!firstGallery);
                
                if (firstGallery) {
                    firstGallery.style.display = 'block';
                    firstGallery.style.opacity = '1';
                    console.log('First gallery should now be visible');
                    
                    // Check how many images are in the first gallery
                    const images = firstGallery.querySelectorAll('.social-item');
                    console.log('Images in first gallery:', images.length);
                }
            }
        }

        // Initialize first gallery as visible and first color as active
        initializeGallery();

        colorItems.forEach(item => {
            item.addEventListener('click', function () {
                const colorId = this.getAttribute('data-color');
                const colorLabel = this.querySelector('.color-label')?.textContent?.toLowerCase().trim();
                
                // Auto-switch stores based on color
                if (colorLabel === 'brass') {
                    // Switch to Quorum store
                    localStorage.setItem("store-selected", "quorum");
                    document.querySelector('html').dataset.storeSelected = "quorum";
                    
                    // Update store switcher radio buttons
                    const quorumRadio = document.querySelector('store-switcher input[value="quorum"]');
                    if (quorumRadio) {
                        quorumRadio.checked = true;
                        // Trigger change event to update other parts of the site
                        quorumRadio.dispatchEvent(new Event('change', { bubbles: true }));
                    }
                    
                    console.log('ðŸ”„ [Art of Light] Switched to Quorum store via Brass button');
                    
                } else if (colorLabel === 'white') {
                    // Switch to Oxygen store
                    localStorage.setItem("store-selected", "oxygen");
                    document.querySelector('html').dataset.storeSelected = "oxygen";
                    
                    // Update store switcher radio buttons
                    const oxygenRadio = document.querySelector('store-switcher input[value="oxygen"]');
                    if (oxygenRadio) {
                        oxygenRadio.checked = true;
                        // Trigger change event to update other parts of the site
                        oxygenRadio.dispatchEvent(new Event('change', { bubbles: true }));
                    }
                    
                    console.log('ðŸ”„ [Art of Light] Switched to Oxygen store via White button');
                    
                } else {
                    // For other colors, switch to "All Brands" to show everything
                    localStorage.setItem("store-selected", "all brands");
                    document.querySelector('html').dataset.storeSelected = "all brands";
                    
                    // Update store switcher radio buttons
                    const allBrandsRadio = document.querySelector('store-switcher input[value="all brands"]');
                    if (allBrandsRadio) {
                        allBrandsRadio.checked = true;
                        // Trigger change event to update other parts of the site
                        allBrandsRadio.dispatchEvent(new Event('change', { bubbles: true }));
                    }
                    
                    console.log('ðŸ”„ [Art of Light] Switched to All Brands via', colorLabel, 'button');
                }
                
                // Show the selected color gallery
                showGallery(colorId);
            });
        });
    });
</script>

