<section class="image-full-wrapper">
    {% if section.settings.image != blank %}
        <img
            src="{{ section.settings.image | img_url: 'master' }}"
            alt="Full width image"
            class="image-full"
        >
    {% endif %}
</section>

<style>
.image-full-wrapper {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 1rem;
}

.image-full {
    width: 100%;
    height: auto;
    display: block;
}
</style>

{% schema %}
{
  "name": "Image",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Upload Image"
    }
  ],
  "presets": [
    {
      "name": "Full Width Image",
      "category": "Media"
    }
  ]
}
{% endschema %}