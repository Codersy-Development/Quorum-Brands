<div class="info-block">
    {% if block.settings.heading %}
        <div class="info-title" 
             style="font-size: {{ block.settings.heading_font_size }}px; line-height: {{ block.settings.heading_line_height }};">
            {{ block.settings.heading }}
        </div>
    {% endif %}
    <div class="info-block__content
        {% if block.settings.image_position == 'left' %}info-block__horizontal{% endif %}
        {% if block.settings.image_position == 'right' %}info-block__horizontal info-block__reverse{% endif %}
    ">
        {% if block.settings.text %}
            <div class="info-block__text"
                 style="font-size: {{ block.settings.text_font_size }}px; line-height: {{ block.settings.text_line_height }};">
                {{ block.settings.text }}
            </div>
        {% endif %}
        {% if section.settings.image %}
          <img src="{{ section.settings.image | image_url: width: 300 }}" alt="Info Image"
               style="border-radius: {{ block.settings.image_border_radius }}px;">
        {% endif %}
        {% content_for 'blocks' %}
    </div>
</div>
<style>
    .info-block {
        max-width: 1200px;
        margin: 0 auto;
    }
    .info-title {
        text-align: center;
        font-weight: bold;
    }
    .info-block__text {
        flex: 1;
        padding: 0 1rem;
        text-align: center;
    }
</style>
{% schema %}
{
  "name": "Info Block with Image",
  "class": "info-block",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Title",
      "default": "Sconces"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Description",
      "default": "<p>Create symmetry with sconces placed a few inches on each side of your mirror...</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        { "value": "bottom", "label": "Bottom" },
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "bottom"
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "label": "Image Border Radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "header",
      "content": "Typography Settings"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading Font Size",
      "min": 12,
      "max": 48,
      "step": 1,
      "unit": "px",
      "default": 24
    },
    {
      "type": "range",
      "id": "heading_line_height",
      "label": "Heading Line Height",
      "min": 1.0,
      "max": 2.5,
      "step": 0.1,
      "default": 1.2
    },
    {
      "type": "range",
      "id": "text_font_size",
      "label": "Text Font Size",
      "min": 10,
      "max": 32,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "text_line_height",
      "label": "Text Line Height",
      "min": 1.0,
      "max": 2.5,
      "step": 0.1,
      "default": 1.5
    }
  ],
  "blocks": [{ "type": "@theme" }, { "type": "@app" }],
  "presets": [
    {
      "name": "Info Block with Image"
    }
  ]
}
{% endschema %}