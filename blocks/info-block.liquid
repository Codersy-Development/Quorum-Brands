<div class="info-block">
    {% if block.settings.heading %}
        <div class="info-title">{{ block.settings.heading }}</div>
    {% endif %}
    <div class="info-block__content
        {% if block.settings.image_position == 'left' %}info-block__horizontal{% endif %}
        {% if block.settings.image_position == 'right' %}info-block__horizontal info-block__reverse{% endif %}
    ">
        {% if block.settings.text %}
            <div class="info-block__text">
                {{ block.settings.text }}
            </div>
        {% endif %}

        {% content_for 'blocks' %}
    </div>
</div>

<style>
    .info-block {
        max-width: 1200px;
        margin: 0 auto;
    }
    .info-title {
        text-align: center;
        font-weight: bold;
    }

    .info-block__text {
        flex: 1;
        padding: 0 1rem;
        text-align: center;
        font-size: .6rem;
    }

</style>

{% schema %}
{
  "name": "Info Block with Image",
  "class": "info-block",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Title",
      "default": "Sconces"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Description",
      "default": "<p>Create symmetry with sconces placed a few inches on each side of your mirror...</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        { "value": "bottom", "label": "Bottom" },
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "bottom"
    }
  ],
  "blocks": [{ "type": "@theme" }, { "type": "@app" }],
  "presets": [
    {
      "name": "Info Block with Image"
    }
  ]
}
{% endschema %}