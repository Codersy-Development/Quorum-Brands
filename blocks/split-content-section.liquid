<div class="split-content-section" 
     style="margin-top: {{ block.settings.section_margin_top }}px; margin-bottom: {{ block.settings.section_margin_bottom }}px;">
    <div class="split-content-container {% if block.settings.layout == 'vertical' %}vertical{% endif %}">
        {% content_for 'blocks' %}
    </div>
</div>
<style>
    .split-content-section {
        width: 100%;
        margin-left: auto;
        margin-right: auto;
    }
    .split-content-container {
        display: flex;
        gap: 0;
        flex-direction: row;
    }
    .split-content-container.vertical {
        flex-direction: column;
        gap: 1rem;
    }
    .split-content-column img {
        width: 100%;
        height: auto;
        display: block;
        border-radius: 8px;
    }
    .designer-tip strong {
        display: block;
    }
    @media (max-width: 768px) {
        .split-content-container {
            flex-direction: column !important;
        }
    }
</style>
{% schema %}
{
  "name": "Split Content Section",
  "tag": "section",
  "class": "split-content-section",
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "label": "Split Layout",
      "options": [
        { "value": "horizontal", "label": "Horizontal (Side-by-side)" },
        { "value": "vertical", "label": "Vertical (Stacked)" }
      ],
      "default": "horizontal"
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "section_margin_top",
      "label": "Top Margin",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0,
      "info": "Space above this split section"
    },
    {
      "type": "range",
      "id": "section_margin_bottom",
      "label": "Bottom Margin",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0,
      "info": "Space below this split section"
    }
  ],
  "blocks": [{ "type": "@theme" }, { "type": "@app" }],
  "presets": [
    {
      "name": "Split Content Section"
    }
  ]
}
{% endschema %}