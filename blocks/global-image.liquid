<section class="image-full-wrapper">
    {% if block.settings.image != blank %}
        <img
            src="{{ block.settings.image | img_url: 'master' }}"
            alt="Full width image"
            class="image-full"
            style="border-radius: {{ block.settings.image_border_radius }}px; margin-top: {{ block.settings.image_margin_top }}px; margin-bottom: {{ block.settings.image_margin_bottom }}px;"
        >
    {% endif %}
    
    {% if block.settings.tip != blank %}
        <div class="designer-tip-box" style="background-color: {{ block.settings.tip_background_color }};">
            <p class="designer-tip-title">{{ block.settings.tip_heading }}:</p>
            <p>{{ block.settings.tip }}</p>
        </div>
    {% endif %}
</section>
<style>
.image-full-wrapper {
    width: 100%;
    height: 100%;
    position: relative;
} 
.image-full-wrapper img {
    min-width: 300px;
}
.image-full {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: contain;
}
.designer-tip-box {
    display: flex;
    flex-direction: row;
    gap: 16px;
    color: #ffffff;
    padding: 1rem 1.5rem;
    font-size: 10px;
    line-height: 1.6;
    width: 100%;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
}
.designer-tip-title {
    font-weight: bold;
    color: #ffffff;
    border-right: 1px solid #ffffff;
    font-size: 12px;
    padding-right: 16px;
}
</style>
{% schema %}
{
  "name": "Global Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Upload Image"
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "label": "Image Border Radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "header",
      "content": "Image Spacing"
    },
    {
      "type": "range",
      "id": "image_margin_top",
      "label": "Image Top Margin",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "image_margin_bottom",
      "label": "Image Bottom Margin",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type": "header",
      "content": "Designer Tip"
    },
    {
      "type": "text",
      "id": "tip_heading",
      "label": "Tip Heading",
      "default": "Designer Tip",
      "info": "Text that appears before the colon (e.g., 'Pro Tip', 'Designer Tip')"
    },
    {
      "type": "textarea",
      "id": "tip",
      "label": "Tip Text",
      "info": "Add a helpful tip that will appear at the bottom of the image"
    },
    {
      "type": "color",
      "id": "tip_background_color",
      "label": "Tip Background Color",
      "default": "#7B675C"
    }
  ],
  "presets": [
    {
      "name": "Global Image"
    }
  ]
}
{% endschema %}