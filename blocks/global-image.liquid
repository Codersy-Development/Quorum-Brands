<section class="image-full-wrapper">
    {% if block.settings.image != blank %}
        <img
            src="{{ block.settings.image | img_url: 'master' }}"
            alt="Full width image"
            class="image-full"
            style="border-radius: {{ block.settings.image_border_radius }}px; margin-top: {{ block.settings.image_margin_top }}px; margin-bottom: {{ block.settings.image_margin_bottom }}px;"
        >
    {% endif %}
    
    {% if block.settings.tip != blank %}
        <div class="designer-tip-box" 
             style="background-color: {{ block.settings.tip_background_color }}; 
                    left: {{ block.settings.tip_horizontal_position }}%; 
                    bottom: {{ block.settings.tip_vertical_position }}%; 
                    width: {{ block.settings.tip_box_width }}%; 
                    transform: translateX(-{{ block.settings.tip_horizontal_position }}%);">
            <p class="designer-tip-title">{{ block.settings.tip_heading }}:</p>
            <p>{{ block.settings.tip }}</p>
        </div>
    {% endif %}
</section>
<style>
.image-full-wrapper {
    width: 100%;
    height: 100%;
    position: relative;
} 
.image-full-wrapper img {
    min-width: 300px;
}
.image-full {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: contain;
}
.designer-tip-box {
    display: flex;
    flex-direction: row;
    gap: 16px;
    color: #ffffff;
    padding: 1rem 1.5rem;
    font-size: 10px;
    line-height: 1.6;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
    position: absolute;
}
.designer-tip-title {
    font-weight: bold;
    color: #ffffff;
    border-right: 1px solid #ffffff;
    font-size: 12px;
    padding-right: 16px;
}
</style>
{% schema %}
{
  "name": "Global Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Upload Image"
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "label": "Image Border Radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "header",
      "content": "Image Spacing"
    },
    {
      "type": "range",
      "id": "image_margin_top",
      "label": "Image Top Margin",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "image_margin_bottom",
      "label": "Image Bottom Margin",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type": "header",
      "content": "Example"
    },
    {
      "type": "text",
      "id": "tip_heading",
      "label": "Example Heading",
      "default": "Example",
      "info": "Text that appears before the colon (e.g., 'Example', 'Pro Tip', 'Note')"
    },
    {
      "type": "textarea",
      "id": "tip",
      "label": "Example Text",
      "info": "Add helpful example text that will appear over the image"
    },
    {
      "type": "color",
      "id": "tip_background_color",
      "label": "Example Background Color",
      "default": "#7B675C"
    },
    {
      "type": "header",
      "content": "Example Box Position & Size"
    },
    {
      "type": "range",
      "id": "tip_horizontal_position",
      "label": "Horizontal Position",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 50,
      "info": "0% = Left edge, 50% = Center, 100% = Right edge"
    },
    {
      "type": "range",
      "id": "tip_vertical_position",
      "label": "Vertical Position",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 0,
      "info": "0% = Bottom edge, 100% = Top edge"
    },
    {
      "type": "range",
      "id": "tip_box_width",
      "label": "Example Box Width",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 80,
      "info": "Width of the example box relative to the image"
    }
  ],
  "presets": [
    {
      "name": "Global Image"
    }
  ]
}
{% endschema %}